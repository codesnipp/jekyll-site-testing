@import "nib";
@import "icons";

@import "vendor/normalize.css";
@import "vendor/tomorrow.css";

darkGrey = #556270;
darkerGrey = darken(darkGrey, 20);
grey = #9BA3AA;
lightGrey = lighten(grey, 30);
lighterGrey = lighten(lightGrey, 4);

lightestBlue = #F2FAFC;

red = #B50D0D;
blue = #6991AA;
iron = #28293E;
azurite = #343E56;

green = #7FAF1B;

body {
  color: darkGrey;
  background: white;
  font-size: 16px;
  font-family: 'Open Sans', sans-serif;
}

h1, h2, h3, h4, h5, h6 {
  color: darkerGrey;
}

h2, h3, h4, h5, h6 {
  font-weight: 600;
  margin-top: 1.5em;
}

a {
  color: blue;
}

abbr[title] {
  border: 0;
  font-variant: small-caps;
  text-transform: lowercase;
  font-weight: 600;
  letter-spacing: 0.1em;
}

#intro {
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  width: 260px;
  padding: 60px;
  background: green;

  img {
    border-radius: 84px;
    width: 160px;
    border: 4px solid rgba(white, 0.3)
  }

  h1 {
    font-size: 20px;
    font-weight: bold;
  }
  p {
    color: lighten(#7FAF1B, 20);
    font-weight: 300;
    a {
      color: lighten(#7FAF1B, 20);
      &:hover {
        color: lighten(#7FAF1B, 40);
      }
    }
  }

  #on-the-web {

    a {
      //background: lightGrey;
      display: block;
      font-size: 14px;
      font-weight: bold;
      text-decoration: none;
      padding: 8px 0;
      border-radius: 5px;
      margin-bottom: 5px;
      color: lighten(#7FAF1B, 20);
      &:before {
        icon();
        width: 16px;
        padding: 0 4px;
        margin-right: 4px;
      }
      &:hover {
        color: lighten(#7FAF1B, 40);
      }
    }

  }
  .twitter:before {
    content: "\54";
  }
  
  .github:before {
    content: "\f300";
    font-size: 16px;
  }

  .appdotnet:before {
    content: "\e1";
  }
}

#content {
  position: absolute;
  top: 0;
  left: 380px;
  padding: 60px;
}

.post {
  margin-bottom: 60px;
  &:last-child {
    margin-bottom: 0;
  }
  h1 {
    margin-top: 0;
    a {
      text-decoration: none;
    }
  }
  h1, h1 a {
    color: azurite;
  }

  h1, h2, h3, h4, h5, h6, p, blockquote {
    max-width: 540px;
  }

}

.date {
  color: grey;
  //text-transform: uppercase;
  font-size: 12px;
  font-family: "Open Sans";
  font-weight: 400;
  line-height: 1;
  display: block;
}

p {
  line-height: 1.5;
}

// Code
pre {
  margin: 20px 0;
  padding: 20px;
  border-radius: 5px;
  overflow: auto;
  background: darkerGrey;
  -webkit-font-smoothing: subpixel-antialiased;
}
code {
  padding: 0 4px;
  font-family: "Droid Sans Mono", "Monaco", Courier, sans-serif;
  font-size: 0.8em;
}
pre code {
  padding: 0;
  color: inherit;
  background: inherit;
  border-radius: 0;
}